/* pages/demo.wxss */
/* 表头，中午，晚上 */
.kb-title {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    height: 10%;

}
/* 中午，晚上 */
.kb-title-small {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    height: 4%;

}
/* title的具体的view */
.kb-title-item{
    width: 13%;
    height: 95%;
    background: #63d0f1;
    border-radius: 30%;
    font-size: 120%;
    text-align: center;
    word-wrap: break-word;
}
/* 白天 */
.kb-daytime{
    display: flex;
    flex-direction: row;
    height: 16%;
    justify-content: space-around;
}
/* 白天的view */
.kb-daytime-item {
    display: flex;
    width: 13%;
    height: 95%;
    text-align: center;
    background:chartreuse;
    flex-direction: column;
    border-radius: 10%;
}
/* 晚上 */
.kb-night{
    display: flex;
    flex-direction: row;
    height: 25%;
    justify-content: space-around;
}
/* 晚上的view */
.kb-night-item{
    display: flex;
    width: 13%;
    height: 95%;
    background: rgb(233, 151, 44);
    text-align: center;
    flex-direction: column;
    border-radius: 10%;
}
/* 整个课表 */
.kb {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-content: space-around;
    height: 90%;
    position:relative;
    bottom: 2px;

}
/* 左侧边提示view(除了第一个显示的月份) */
.kb-left-item{
    display: flex;
    width: 20rpx;
    font-size: smaller;
    font-weight: 200;
    align-items:center;
    line-height: 90rpx;
}
/* 显示月份的表格 */
.kb-left-moth{
    height: 90%;
    display: flex;
    width: 20rpx;
    font-size: small;
    font-weight: 200;
    align-items: center;
}
/* 课表的字体 */
.kb-font{
    font-size:80%;
    word-wrap: break-word;

}
/* 整个页面 */
.page{
    height: 100%;
    display: inline;
}
